<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Compass"
        app:titleCentered="true"
        app:titleTextAppearance="@style/Title"
        android:id="@+id/toolbar"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="10sp"
        android:layout_below="@id/toolbar"
        android:id="@+id/card1"
        style="@style/Widget.Material3.CardView.Filled"
        android:outlineSpotShadowColor="?attr/colorPrimary"
        android:outlineAmbientShadowColor="?attr/colorPrimary"
        app:cardElevation="10sp"
        android:layout_centerHorizontal="true">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:src="@drawable/compass3"
            android:padding="20sp"
            android:id="@+id/compassImageView"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/card1"
        android:id="@+id/card2"
        android:outlineAmbientShadowColor="?attr/colorPrimary"
        android:outlineSpotShadowColor="?attr/colorPrimary"
        app:cardElevation="10sp"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/cityTV"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorSurfaceInverse"
            app:drawableLeftCompat="@drawable/baseline_location_pin_24"
            app:drawableTint="?attr/colorSurfaceInverse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/compassCard"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="340Â°"
                android:gravity="center"
                android:textSize="70sp"
                android:id="@+id/headingTV"
                android:textColor="#E62323"/>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorSurfaceInverse"
                    android:textStyle="bold"
                    android:id="@+id/directionTV"
                    android:text="N"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitudeTV"
                    android:text="80.8767"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitudeTV"
                    android:text="80.8767"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trueHeadingTV"
                    android:text="80"/>

            </LinearLayout>

        </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="100sp"
                android:layout_height="2sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:fontFamily="sans-serif"
                android:id="@+id/magneticStrength"
                android:text="Magnetic Strength: "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:textStyle="bold"
                android:textFontWeight="600"
                android:fontFamily="sans-serif"
                android:id="@+id/pressureTV"
                android:text="Pressure: "/>

        </LinearLayout>





    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/searchNorthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerca Nord"
        android:layout_below="@id/card2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



</RelativeLayout>